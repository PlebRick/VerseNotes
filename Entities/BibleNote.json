{
    "name": "BibleNote",
    "type": "object",
    "properties": {
      "title": {
        "type": "string",
        "description": "Title of the note"
      },
      "verse_reference": {
        "type": "string",
        "description": "Bible verse reference (e.g., 'Romans 1:1-16')"
      },
      "book": {
        "type": "string",
        "description": "Bible book name"
      },
      "chapter": {
        "type": "number",
        "description": "Chapter number"
      },
      "start_verse": {
        "type": "number",
        "description": "Starting verse number"
      },
      "end_verse": {
        "type": "number",
        "description": "Ending verse number"
      },
      "content": {
        "type": "string",
        "description": "Full note content"
      },
      "preview": {
        "type": "string",
        "description": "Short preview of the note"
      },
      "tags": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Tags for organizing notes"
      }
    },
    "required": [
      "title",
      "verse_reference",
      "book",
      "chapter",
      "start_verse",
      "content"
    ]
  }